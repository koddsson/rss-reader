{
  "name": "web-dev",
  "version": "0.0.1",
  "description": "üè£ A simple RSS reader that doesn't have a backend but only stores data in the browser. Doesn't have a lot of fancy features but is just simple and nice.",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "prebuild": "npm run build:css",
    "build": "rollup -c rollup.config.js",
    "build:css": "postcss src/css/index.css -o dist/index.css",
    "prebuild:js:prod": "npm run build:css",
    "build:js:prod": "esbuild src/js/index.ts --minify --bundle --format=esm --outfile=dist/index.js",
    "lint": "eslint src/**/*.ts",
    "start": "web-dev-server",
    "test": "web-test-runner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koddsson/web-dev.git"
  },
  "keywords": [
    "rss",
    "reader",
    "rss-reader",
    "little-app"
  ],
  "author": "Kristj√°n Oddsson <hi@koddsson.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/koddsson/web-dev/issues"
  },
  "prettier": "@github/prettier-config",
  "homepage": "https://koddsson.github.io/rss-reader/",
  "devDependencies": {
    "@github/prettier-config": "^0.0.6",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/mocha": "^10.0.6",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-esbuild": "^1.0.1",
    "@web/rollup-plugin-copy": "^0.5.1",
    "@web/rollup-plugin-html": "^2.1.2",
    "@web/test-runner": "^0.18.0",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "open-props": "^1.6.17",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "postcss-jit-props": "^1.0.14",
    "prettier": "^3.2.4",
    "rollup-plugin-esbuild": "^6.1.1"
  },
  "dependencies": {
    "@github/time-elements": "^4.0.0"
  }
}
